# Django 环境变量配置示例
# 复制此文件为 .env 并填入真实的配置值

# 数据库配置（如果需要）
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname


# ==================== AI 模型配置 ====================

# ---------- 自定义 AI 服务配置 ----------
CUSTOM_AI_BASE_URL=your custom ai service base url
CUSTOM_AI_API_KEY=your custom ai service api key
CUSTOM_AI_MODEL=your custom ai service model
CUSTOM_AI_TIMEOUT=60

# ==================== 内容生成配置 ====================

# 默认语言
CONTENT_LANGUAGE=zh-CN

# 最大内容长度
MAX_CONTENT_LENGTH=10000

# 生成超时时间（秒）
GENERATION_TIMEOUT=60

# 是否启用缓存
ENABLE_CACHE=True


# ==================== 日志配置 ====================

# 日志级别: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=logs/contentgenerater.log
